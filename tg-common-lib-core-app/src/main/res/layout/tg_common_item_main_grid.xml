<?xml version="1.0" encoding="utf-8"?>
<com.turingoal.common.android.ui.layout.TgSquareLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/dp_1"
    android:background="#FFFFF0"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackgroundBorderless"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/tg_common_item_main_grid_ivImage"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="@dimen/dp_18" />

    <TextView
        android:id="@+id/tg_common_item_main_grid_ivImagetvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|bottom"
        android:layout_marginBottom="@dimen/dp_8"
        android:text="@string/default_common_blank"
        android:textColor="#666666"
        android:textSize="@dimen/sp_16" />
</com.turingoal.common.android.ui.layout.TgSquareLinearLayout>
