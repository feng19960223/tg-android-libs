<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:background="#5FB9F5">

    <ImageView
        android:id="@+id/tg_common_view_top_bar_ivBack"
        android:layout_width="35dp"
        android:layout_height="match_parent"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:src="@mipmap/tg_common_ic_arrow_left"
        android:visibility="gone" />

    <TextView
        android:id="@+id/tg_common_view_top_bar_tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:text="@string/default_common_blank"
        android:textColor="#FFFFFF"
        android:textSize="21dp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_alignParentBottom="true"
        android:background="#EFF2F4" />
</RelativeLayout>